<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/checkEspanhol"
        android:layout_width="410dp"
        android:layout_height="45dp"
        android:text="Curso de Espanhol"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="3dp" />

    <CheckBox
        android:id="@+id/checkIngles"
        android:layout_width="410dp"
        android:layout_height="45dp"
        android:text="Curso de Inglês "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="49dp" />

    <CheckBox
        android:id="@+id/checkAvista"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:text="À vista "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/buttonCalc"
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:onClick="@string/buttonCalc"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="165dp" />

    <EditText
        android:id="@+id/editTextTotal"
        android:layout_width="128dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/editTextTotal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="221dp" />

</androidx.constraintlayout.widget.ConstraintLayout>